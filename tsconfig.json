{
    "extends": "./node_modules/@balena/lint/tsconfig.json",
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "build",
		"preserveConstEnums": true,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2022"
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	]
}
